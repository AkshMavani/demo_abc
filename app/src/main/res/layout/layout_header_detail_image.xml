<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"

    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">
    <ImageView
        android:id="@+id/imgBack"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/_14sdp"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/lnTextDetail"
        android:focusable="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgBack"
        app:layout_constraintEnd_toStartOf="@+id/tvEdit"
        app:layout_constraintStart_toEndOf="@+id/imgBack"
        app:layout_constraintTop_toTopOf="@+id/imgBack">
        <com.example.abc.TextFontView
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_12"
            app:layout_constraintEnd_toStartOf="@+id/tvEdit"
            app:layout_constraintStart_toEndOf="@+id/imgBack"/>
        <com.example.abc.TextFontView
            android:textSize="@dimen/text_size_10sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_12"
            app:layout_constraintEnd_toStartOf="@+id/tvEdit"
            app:layout_constraintStart_toEndOf="@+id/imgBack"/>
    </LinearLayout>
    <TextView
        android:textColor="@color/color_green2"
        android:gravity="center"
        android:id="@+id/tvEdit"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_40sdp"
        android:text="@string/edit_text"
        app:layout_constraintBottom_toBottomOf="@+id/imgBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_more"
        app:layout_constraintTop_toTopOf="@+id/imgBack"/>
    <ImageView
        android:id="@+id/img_more"
        android:padding="5dp"
        android:visibility="visible"
        android:layout_width="22dp"
        android:layout_height="22dp"

        android:layout_marginEnd="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu"/>
    <ImageView
        android:id="@+id/cccc"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_tick_main"
        android:alpha="0.92"
        android:layout_marginEnd="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
      android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        app:layout_constraintTop_toBottomOf="@+id/imgBack"/>
</androidx.constraintlayout.widget.ConstraintLayout>
