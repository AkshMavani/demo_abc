<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_1_5dp"
    android:foreground="?attr/selectableItemBackground">
    <ImageView
        android:id="@+id/img_thumb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/text_size_12sp"
        android:textColor="@color/color_white"
        android:id="@+id/tv_time_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_6"
        android:shadowColor="@color/color_white_press"
        android:shadowDx="@dimen/text_shadow_1"
        android:shadowDy="@dimen/text_shadow_1"
        android:shadowRadius="@dimen/text_shadow_radius_2"
        android:layout_marginEnd="@dimen/margin_4"
        app:layout_constraintBottom_toBottomOf="@+id/img_thumb"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/v_select"
        android:background="@color/color_select_image"
        android:visibility="invisible"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_0dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_thumb"
        app:layout_constraintEnd_toEndOf="@+id/img_thumb"
        app:layout_constraintStart_toStartOf="@+id/img_thumb"
        app:layout_constraintTop_toTopOf="@+id/img_thumb"/>
    <ImageView
        android:id="@+id/img_ic_select"
        android:visibility="invisible"
        android:layout_width="@dimen/size_ic_tick"
        android:layout_height="@dimen/size_ic_tick"
        android:layout_margin="@dimen/margin_6"
        android:src="@drawable/ic_tick_boder_white"
        app:layout_constraintBottom_toBottomOf="@+id/img_thumb"
        app:layout_constraintEnd_toEndOf="@+id/img_thumb"/>
    <ImageView
        android:id="@+id/imgFavorite"
        android:visibility="invisible"
        android:layout_width="@dimen/size_ic_tick"
        android:layout_height="@dimen/size_ic_tick"
        android:layout_margin="@dimen/margin_10dp"
        android:src="@drawable/baseline_favorite_border_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
