<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rlContentGallery"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:scrollbarSize="3dp"
                    android:scrollbarThumbVertical="@drawable/thumb"
                    android:id="@+id/rcvYear"
                    android:paddingTop="@dimen/_72sdp"
                    android:paddingBottom="@dimen/_72sdp"
                    android:visibility="gone"
                    android:scrollbars="vertical"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="ifContentScrolls"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:scrollbarSize="3dp"
                    android:scrollbarThumbVertical="@drawable/thumb"
                    android:id="@+id/rcvMonth"
                    android:paddingTop="@dimen/_72sdp"
                    android:paddingBottom="@dimen/_72sdp"
                    android:visibility="gone"
                    android:scrollbars="vertical"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="ifContentScrolls"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:scrollbarSize="3dp"
                    android:scrollbarThumbVertical="@drawable/thumb"
                    android:id="@+id/rcvDay"
                    android:paddingTop="@dimen/_72sdp"
                    android:paddingBottom="@dimen/_72sdp"
                    android:visibility="gone"
                    android:scrollbars="vertical"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="ifContentScrolls"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.example.abc.ZoomingRecyclerView
                    android:scrollbarSize="3dp"
                    android:scrollbarThumbVertical="@drawable/thumb"
                    android:id="@+id/rcvMedia"
                    android:paddingTop="@dimen/_72sdp"
                    android:paddingBottom="@dimen/_72sdp"
                    android:scrollbars="vertical"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="ifContentScrolls"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </RelativeLayout>
            <View
                android:focusable="true"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="1dp"
                app:layout_constraintBottom_toBottomOf="@+id/tbGallery"
                app:layout_constraintEnd_toEndOf="@+id/tbGallery"
                app:layout_constraintTop_toTopOf="@+id/tbGallery"
                app:layout_constraintWidth_percent="0.4"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tbGallery"
                android:background="@drawable/bg_home_gradient"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_57sdp"
                android:elevation="1dp"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/bg_radius_1000"
                    android:alpha="0.92"
                    app:layout_constraintBottom_toBottomOf="@+id/btnSelect"
                    app:layout_constraintEnd_toEndOf="@+id/btnSelect"
                    app:layout_constraintStart_toStartOf="@+id/btnSelect"
                    app:layout_constraintTop_toTopOf="@+id/btnSelect"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/bg_radius_1000"
                    android:alpha="0.92"
                    app:layout_constraintBottom_toBottomOf="@+id/btnGalleryMore"
                    app:layout_constraintEnd_toEndOf="@+id/btnGalleryMore"
                    app:layout_constraintStart_toStartOf="@+id/btnGalleryMore"
                    app:layout_constraintTop_toTopOf="@+id/btnGalleryMore"/>
                <ImageView
                    android:id="@+id/clickcamera"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/camera"
                    android:alpha="0.92"
                    android:layout_marginStart="@dimen/_14sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.example.abc.TextFontView
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/btnSelect"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:text="select_text"

                    android:layout_marginEnd="@dimen/_8sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnGalleryMore"/>
                <ImageView
                    android:gravity="center_vertical"
                    android:id="@+id/btnGalleryMore"
                    android:padding="7dp"
                    android:visibility="visible"
                    android:layout_width="27dp"
                    android:layout_height="27dp"

                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/ic_menu"
                    app:tint="@color/white"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_14sdp"
                android:elevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <com.blurview.BlurView
                    android:id="@+id/tbCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:background="@drawable/bg_action_button_view"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp">
                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabMode"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fillViewport="true"
                            android:backgroundTint="@android:color/transparent"
                            app:tabGravity="center"
                            app:tabIndicator="@drawable/bg_item_tl_theme_dark"

                            app:tabIndicatorFullWidth="true"
                            app:tabIndicatorHeight="@dimen/_30sdp"
                            app:tabMaxWidth="0dp"
                            app:tabMode="scrollable"
                            app:tabRippleColor="@android:color/transparent"

                            app:tabTextAppearance="@style/TextTabLayoutCategory"
                            app:tabTextColor="@color/white"/>
                    </RelativeLayout>
                </com.blurview.BlurView>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <FrameLayout
        android:id="@+id/container_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
