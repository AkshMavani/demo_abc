<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.example.abc.ZoomingRecyclerView
                android:scrollbarSize="3dp"
                android:id="@+id/rcv_image"
                android:paddingTop="@dimen/_110sdp"
                android:paddingBottom="@dimen/_40sdp"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="ifContentScrolls"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:paddingTop="@dimen/_24sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">
                <View
                    android:id="@+id/v_bg_header"
                    android:background="@drawable/bg_header_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_0dp"
                    android:alpha="0"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_album_name"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/img_back"
                    android:padding="@dimen/padding_9"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_40dp"
                    android:layout_marginTop="@dimen/margin_6"
                    android:src="@drawable/ic_back"
                    android:layout_marginStart="@dimen/margin_16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="@color/color_007AFF"
                    android:id="@+id/tv_left"
                    android:paddingTop="@dimen/padding_6"
                    android:paddingRight="@dimen/padding_11"
                    android:paddingBottom="@dimen/padding_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/albums"
                    app:layout_constraintBottom_toBottomOf="@+id/img_back"
                    app:layout_constraintStart_toEndOf="@+id/img_back"
                    app:layout_constraintTop_toTopOf="@+id/img_back"/>
                <TextView
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/color_0A84FF"
                    android:id="@+id/tv_right"

                    android:paddingLeft="@dimen/padding_11"
                    android:paddingTop="@dimen/padding_6"
                    android:paddingRight="@dimen/padding_11"
                    android:paddingBottom="@dimen/padding_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_text"
                    android:layout_marginEnd="@dimen/margin_16"
                    app:layout_constraintBottom_toBottomOf="@+id/img_back"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_back"/>
                <TextView
                    android:textSize="@dimen/text_size_22dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_0A84FF"
                    android:ellipsize="end"
                    android:id="@+id/tv_album_name"
                    android:paddingBottom="@dimen/margin_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12"
                    android:maxLines="1"
                    android:lines="1"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintStart_toStartOf="@+id/img_back"
                    app:layout_constraintTop_toBottomOf="@+id/img_back"/>
                <View
                    android:id="@+id/v_left"
                    android:background="@drawable/zipple_touch"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="@dimen/size_0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_left"
                    app:layout_constraintEnd_toEndOf="@+id/tv_left"
                    app:layout_constraintStart_toStartOf="@+id/img_back"
                    app:layout_constraintTop_toTopOf="@+id/tv_left"/>
                <TextView
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/color_0A84FF"
                    android:id="@+id/tv_left_selectAll"
                    android:background="@drawable/bg_text_select_normal"
                    android:paddingLeft="@dimen/padding_11"
                    android:paddingTop="@dimen/padding_6"
                    android:paddingRight="@dimen/padding_11"
                    android:paddingBottom="@dimen/padding_6"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_all"
                    android:layout_marginStart="@dimen/margin_16"
                    app:layout_constraintBottom_toBottomOf="@+id/img_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_back"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <include
                android:id="@+id/inNoPhoto"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                app:layout_constraintVertical_bias="0.38"
                layout="@layout/view_show_no_photo"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <include
            android:layout_gravity="bottom"
            android:id="@+id/in_multi_select"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            layout="@layout/layout_bottom_multi_select_item_main"/>

    <FrameLayout
        android:id="@+id/container_gallery1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
