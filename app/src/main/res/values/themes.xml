<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Demo_full" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Demo_full" parent="Base.Theme.Demo_full" />
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_corners_shape</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="BlurView" >

    </style>

    <style name="TextTabLayoutCategory" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="listPopupWindowStyle">@style/myListPopupWindow</item>
    </style>
    <style name="myListPopupWindow" parent="Widget.MaterialComponents.PopupMenu.ListPopupWindow">
        <item name="popupMenuBackground">@drawable/round_corner</item>
    </style>
    <!-- res/values/styles.xml -->


    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_background</item>
        <item name="android:dropDownHorizontalOffset">8dp</item>
        <item name="android:dropDownVerticalOffset">8dp</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <declare-styleable name="DragLayout">
        <!-- Defines a custom attribute for scale -->
        <attr name="scale" format="float" />

        <!-- Defines a custom attribute for friction -->
        <attr name="friction" format="float" />

        <!-- Defines a custom attribute for tension -->
        <attr name="tension" format="float" />
    </declare-styleable>
    <style name="Draggable.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your full-screen and draggable properties here -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>